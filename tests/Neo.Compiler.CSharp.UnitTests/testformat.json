{
  "appName": "Neo Smart Contract Tester",
  "version": "1.0.0",
  "settings": {
    "debugMode": true,
    "maxRetries": 3,
    "timeoutSeconds": 30
  },
  "networks": [
    {
      "name": "MainNet",
      "rpcEndpoint": "http://seed1.neo.org:10332",
      "active": true
    },
    {
      "name": "TestNet",
      "rpcEndpoint": "http://seed1.neo.org:20332",
      "active": false
    }
  ],
  "contracts": [
    {
      "name": "TokenContract",
      "scriptHash": "0xd2a4cff31913016155e38e474a2c06d08be276cf",
      "abi": {
        "methods": [
          {
            "name": "balanceOf",
            "parameters": [
              {
                "name": "account",
                "type": "Hash160"
              }
            ],
            "returntype": "Integer"
          },
          {
            "name": "transfer",
            "parameters": [
              {
                "name": "from",
                "type": "Hash160"
              },
              {
                "name": "to",
                "type": "Hash160"
              },
              {
                "name": "amount",
                "type": "Integer"
              }
            ],
            "returntype": "Boolean"
          }
        ],
        "events": [
          {
            "name": "Transfer",
            "parameters": [
              {
                "name": "from",
                "type": "Hash160"
              },
              {
                "name": "to",
                "type": "Hash160"
              },
              {
                "name": "amount",
                "type": "Integer"
              }
            ]
          }
        ]
      }
    }
  ],
  "testScenarios": [
    {
      "name": "Basic Transfer Test",
      "steps": [
        {
          "action": "invoke",
          "contract": "TokenContract",
          "method": "transfer",
          "params": [
            "NZNos2WqTbu5oCgyfss9kUJgBXJqhuYAaj",
            "NiNmXL8FjEUEs1nfX9uHFBNaenxDHJtmuB",
            100
          ],
          "expectedResult": true
        },
        {
          "action": "invoke",
          "contract": "TokenContract",
          "method": "balanceOf",
          "params": [
            "NiNmXL8FjEUEs1nfX9uHFBNaenxDHJtmuB"
          ],
          "expectedResult": 100
        }
      ]
    }
  ]
}
